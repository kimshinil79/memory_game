<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for Android 15+ (API 35+) with enhanced edge-to-edge support -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- Android 15+ edge-to-edge optimizations -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <!-- Android 15+ specific attributes for wider screens -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">false</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- Android 15+ edge-to-edge optimizations -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <!-- Android 15+ specific attributes for wider screens -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">false</item>
    </style>
</resources>
