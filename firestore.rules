rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 문서 - 인증된 사용자만 자신의 문서에 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 게임 통계 - 인증된 사용자만 자신의 통계에 접근 가능
    match /gameStats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 리더보드 - 모든 사용자가 읽기 가능, 인증된 사용자만 자신의 기록 작성 가능
    match /leaderboards/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 랭킹 데이터 - 모든 사용자가 읽기 가능
    match /rankings/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 임시로 모든 컬렉션에 읽기 권한 허용 (개발 중)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
